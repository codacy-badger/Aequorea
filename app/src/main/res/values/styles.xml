<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="root_color">@color/colorRoot_light</item>
        <item name="line_color">@color/colorLine_light</item>
        <item name="title_color">@color/colorTextTitle_light</item>
        <item name="subtitle_color">@color/colorTextSubtitleDesc_light</item>
        <item name="subtitle_desc_color">@color/colorTextSubtitleDesc_light</item>
        <item name="content_color">@color/colorTextContent_light</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowBackground">@color/colorPrimary_light</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="icon_theme">@drawable/icon_theme_dark</item>
        <item name="icon_search">@drawable/ic_action_search_dark</item>
        <item name="icon_sorry">@drawable/ic_sorry_dark</item>
        <item name="icon_more">@drawable/ic_action_more_vert_dark</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="root_color">@color/colorRoot_dark</item>
        <item name="line_color">@color/colorLine_dark</item>
        <item name="title_color">@color/colorTextTitle_dark</item>
        <item name="subtitle_color">@color/colorTextSubtitle_dark</item>
        <item name="subtitle_desc_color">@color/colorTextSubtitleDesc_dark</item>
        <item name="content_color">@color/colorTextContent_dark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowBackground">@color/colorPrimary_dark</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="popupTheme">@style/popup_dark</item>

        <item name="icon_theme">@drawable/icon_theme_light</item>
        <item name="icon_search">@drawable/ic_action_search_light</item>
        <item name="icon_sorry">@drawable/ic_sorry_light</item>
        <item name="icon_more">@drawable/ic_action_more_vert_light</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Article.Light" parent="AppTheme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="icon_screenshot">@drawable/icon_screenshot_dark</item>
        <item name="icon_share">@drawable/icon_share_dark</item>
        <item name="icon_font">@drawable/icon_font_dark</item>
        <item name="icon_font_family">@drawable/icon_font_family_white</item>
        <item name="icon_font_spacing">@drawable/icon_line_spacing_white</item>
        <item name="icon_font_size">@drawable/icon_font_size_white</item>
        <item name="icon_font_increase">@drawable/icon_plus_dark</item>
        <item name="icon_font_decrease">@drawable/icon_minus_dark</item>
        <item name="icon_font_drop_down_arrow">@drawable/icon_arrow_drop_down_dark</item>
    </style>

    <style name="AppTheme.Article.Dark" parent="AppTheme.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="icon_screenshot">@drawable/icon_screenshot_light</item>
        <item name="icon_share">@drawable/icon_share_light</item>
        <item name="icon_font">@drawable/icon_font_light</item>
        <item name="icon_font_family">@drawable/icon_font_family_black</item>
        <item name="icon_font_spacing">@drawable/icon_line_spacing_black</item>
        <item name="icon_font_size">@drawable/icon_font_size_black</item>
        <item name="icon_font_increase">@drawable/icon_plus_light</item>
        <item name="icon_font_decrease">@drawable/icon_minus_light</item>
        <item name="icon_font_drop_down_arrow">@drawable/icon_arrow_drop_down_light</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.Light">
        <item name="android:windowBackground" >@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextWithShadow">
        <item name="android:shadowColor">@color/colorPrimary_dark</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="TextLinker" parent="TextWithShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceAuthorTitleExpand">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <style name="TextAppearanceAuthorTitleCollapsed">
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <style name="option_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- article dialog style -->
    <style name="font_round_square">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_round_square</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="font_action">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MSV_ImageButton">
        <item name="android:layout_width">@dimen/search_item_height</item>
        <item name="android:layout_height">@dimen/search_item_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
    </style>

    <style name="popup_dark" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">?attr/root_color</item>
        <item name="android:colorBackground">?attr/root_color</item>
    </style>

    <style name="dialog_simple_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/title_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settings_checkbox_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
